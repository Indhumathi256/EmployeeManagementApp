@model EmployeeManagementApp.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete the employee <strong>@Model.FirstName @Model.LastName</strong>?
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
</form>
