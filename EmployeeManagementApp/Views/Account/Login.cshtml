@model EmployeeManagementApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="Username">Username</label>
        <!-- If Model.Username is null, default to an empty string -->
        <input type="text" class="form-control" id="Username" name="Username" value="@Model?.Username" required />
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>

    <div class="form-group">
        <label>
            <input type="checkbox" name="RememberMe" /> Remember me
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    <a href="@Url.Action("Register", "Account")">Register</a>
</form>

<!-- Display error message if login fails -->
@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
